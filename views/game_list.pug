extends layout 

block content 

    h1= title 

    section.games-list
        each game in games
            div.game
                a(href=game.url)
                    h2!= game.name
                    if (game.posterFileName)
                        div.game-poster(style=`background-image: url(/file/${game.posterFileName}`)
                    else 
                        div.game-poster(style=`background-image: url(/images/game-placeholder.png`)